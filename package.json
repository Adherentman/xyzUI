{
  "name": "xyz-ui",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --open --config ./config/webpack.dev.js",
    "build:allComponent": "node build/bin/build-all.js",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "cz": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -l && git add CHANGELOG.md",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adherentman/xyzUI"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "commitizen": "^3.0.2",
    "conventional-changelog-cli": "^2.0.5",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^0.12.5",
    "docz-plugin-css": "^0.11.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.0",
    "lint-staged": "^7.3.0",
    "mkdir": "^0.0.2",
    "node-sass": "^4.9.4",
    "prettier": "^1.14.3",
    "react-hot-loader": "^4.3.11",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-hot-client": "^4.1.1",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0
      ]
    }
  }
}
