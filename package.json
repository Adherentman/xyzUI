{
  "name": "xyz-ui",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --open --config ./config/webpack.dev.js",
    "build:allComponent": "node build/bin/build-all.js",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "cz": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -l && git add CHANGELOG.md",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adherentman/xyzUI"
  },
  "lint-staged": {
    "*.jsx": [
      "prettier --write",
      "standard --fix --verbose",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-emotion": "^10.0.14",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^3.1.1",
    "conventional-changelog-cli": "^2.0.21",
    "css-loader": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^1.2.0",
    "docz-plugin-css": "^0.11.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.1.0",
    "mini-css-extract-plugin": "^0.7.0",
    "mkdir": "^0.0.2",
    "node-sass": "^4.9.4",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react-hot-loader": "^4.12.6",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-hot-client": "^4.1.2",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@material-ui/core": "^4.2.0",
    "classnames": "^2.2.6",
    "emotion": "^10.0.14",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-emotion": "^10.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
