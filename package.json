{
  "name": "xyz-ui",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --open --config ./config/webpack.dev.js",
    "build:allComponent": "node build/bin/build-all.js",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "cz": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -l && git add CHANGELOG.md",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adherentman/xyzUI"
  },
  "lint-staged": {
    "*.tsx": [
      "pretty-quick --staged",
      "standard --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.11",
    "clean-webpack-plugin": "^0.1.19",
    "commitizen": "^3.0.2",
    "conventional-changelog-cli": "^2.0.5",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^0.12.5",
    "docz-plugin-css": "^0.11.0",
    "fork-ts-checker-webpack-plugin": "^0.4.14",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.0",
    "lint-staged": "^7.3.0",
    "mini-css-extract-plugin": "^0.4.4",
    "mkdir": "^0.0.2",
    "node-sass": "^4.9.4",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.8.0",
    "react-hot-loader": "^4.3.11",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-hot-client": "^4.1.1",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "emotion": "^9.2.12",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-emotion": "^9.2.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
